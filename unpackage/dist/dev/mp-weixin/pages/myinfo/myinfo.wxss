.container {
  display: block;
}
.ui-all {
  padding: 0 30rpx;
  width: 700rpx;
  height: 931rpx;
  background: white;
  box-shadow: 0px 0px 32rpx 0px rgba(3, 22, 38, 0.08);
  border-radius: 20rpx;
  margin: 0 auto;
}
.ui-all .ui-all_my_font {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #9A9A9A;
  width: 128rpx;
  margin-right: 40rpx;
}
.ui-all .ui-all_my {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #343434;
  padding: 40rpx 0 38rpx 0;
}
.ui-all .avatar {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 17rpx 0 19rpx 0;
}
.ui-all .avatar .imgAvatar {
  width: 112rpx;
  height: 111rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
}
.ui-all .avatar .imgAvatar .iavatar {
  width: 100%;
  height: 100%;
  display: block;
}
.ui-all .ui-list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 32rpx 0;
}
.ui-all .ui-list input {
  color: #030303;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.ui-all .ui-list button {
  color: #030303;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  background: none;
  margin: 0;
  padding: 0;
}
.ui-all .ui-list button::after {
  display: none;
}
.ui-all .ui-list textarea {
  color: #030303;
  font-size: 30rpx;
  vertical-align: middle;
  height: 150rpx;
  width: 100%;
  margin-top: 50rpx;
}
.ui-all .ui-list .place {
  color: #999999;
  font-size: 28rpx;
}
.ui-all .save {
  background: #030303;
  border: none;
  color: #ffffff;
  margin-top: 40rpx;
  font-size: 28rpx;
}

